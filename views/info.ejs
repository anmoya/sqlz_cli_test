<% include ./partials/header %>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Creado</th>
            <th>Updateado</th>
            <th>Cafes Pedidos</th>
        </tr>
    </thead>

    <tbody>
        <% compra.forEach( item => { %>
        <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td><%= item.createdAt %></td>
            <td><%= item.updatedAt %></td>
            <td><%  item.Coffees.forEach( cof => { %>
                <%= cof.name + "(" + cof.type + ")," %>
                <% }); %>
            </td>
            <td><a href="<%= item.id %>/modificar">mod</a></td>
        </tr>
        <% }); %>
    </tbody>
</table>


<% include ./partials/footer %>